<div class="page-width">
  <div class="brand-collection__header">
    <h2>{{ section.settings.section_heading }}</h2>
  </div>

  <div class="brand-collection__wrapper">
    {% for block in section.blocks %}

      <a href="{{ block.settings.collection.url }}">
        <div class="brand-card__wrapper">
          <div class="brand-logo__wrapper">
            <img src="{{ block.settings.brand_image |  img_url: 'medium' }}" class="brand-logo">
          </div>
          <div class="brand-title__wrapper">
            <h2>{{ block.settings.title }}</h2>
            {% render 'icon-arrow' %}
          </div>
        </div>
      </a>

    {% endfor %}
  </div>
</div>


<style>

  .brand-c

</style>


{% schema %}
  {
    "name": "Brand List",
    "settings": [
      {
        "type": "inline_richtext",
        "id": "section_heading",
        "label": "Section Heading",
        "default": "Brand"
      }

    ],
    "blocks": [
      {
        "type": "brand_card",
        "name": "Brand Card",
        "settings": [
          {
            "type": "image_picker",
            "id": "brand_image",
            "label": "Brand Image"
          }, {
            "type": "richtext",
            "id": "title",
            "label": "Collection Title",
            "default": "<p>Collection</p>"
          }, {
            "type": "collection",
            "id": "collection",
            "label": "Collection"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Brand List",
        "category": "Section"
      }
    ]
  }
{% endschema %}
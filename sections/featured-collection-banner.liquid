{{ 'collection-card.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div>
<div class="section__collection--wrapper page-width">
  {% for block in section.blocks %}
    {%  render 'collection-card-new',
      url: block.settings.collection.url,
      image: block.settings.banner_image,
      title: block.settings.title
    %}
  {% endfor %}
</div>

</div>

{% schema %}
  {
    "name": "Category List",
    "settings": [
      
    ],
    "blocks": [
      {
        "type": "collection_card",
        "name": "Collection Card",
        "settings": [
          {
            "type": "image_picker",
            "id": "banner_image",
            "label": "Banner Image"
          }, {
            "type": "richtext",
            "id": "title",
            "label": "Collection Title",
            "default": "<p>Collection</p>"
          }, {
            "type": "collection",
            "id": "collection",
            "label": "Collection"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Category List",
        "category": "Section"
      }
    ]
  }
{% endschema %}
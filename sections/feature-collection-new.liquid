document.addEventListener('DOMContentLoaded', function() {
  var swiper = new Swiper('.mySwiper', {
    slidesPerView: 4,
    spaceBetween: 30,
    pagination: {
      el: '.swiper-pagination',
      clickable: true,
    },
    navigation: {
      nextEl: '.swiper-button-next',
      prevEl: '.swiper-button-prev',
    },
  });
});

{% endjavascript %}


{% schema %}
  {
    "name": "New Featured Collection",
    "settings": [
      {
        "type": "richtext",
        "id": "heading",
        "label": "Heading",
        "default": "<p>Collection</p>"
      }, {
        "type": "collection",
        "id": "collection",
        "label": "Collection"
      }
    ],
    "presets": [
      {
        "name": "New Featured Collection",
        "category": "Section"
      }
    ]
  }
{% endschema %}
{% schema %}
  {
    "name": "Brand Collection",
    "settings": [
      {
        "type": "richtext",
        "id": "heading",
        "label": "Heading",
        "default": "<p>Rich text</p>"
      }
    ],
    "blocks": [
      {
        "type": "brand_collection",
        "name": "Collection",
        "settings": [
          {
            "type": "image_picker",
            "id": "product_image",
            "label": "Product Image"
          }, {
            "type": "collection",
            "id": "collection",
            "label": "Collection"
          }, {
            "type": "inline_richtext",
            "id": "title",
            "label": "Brand Name",
            "default": "Brand"
          }, {
            "type": "text",
            "id": "button_text",
            "label": "Button Text",
            "default": "Button"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Brand Collection",
        "category": "Section",
        "blocks": [
          {
            "type": "brand_collection"
          }
        ]
      }

    ]
  }
{% endschema %}
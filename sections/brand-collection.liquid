<div class="page-width">
  <div class="container__collection">
    <div class="collection__heading-container">
      <h2 class="container__collection-heading">{{ section.settings.heading }}</h2>
      <div class="btn-group">
        <div class="swiper-btn swiper-button-prev"></div>
        <div class="swiper-btn swiper-button-next"></div>
      </div>
    {% comment %} <div class="btn-group">
                                                  <button class="slider__btn slider__btn--left">{% render 'icon-minus' %}</button>
                                                  <button class="slider__btn slider__btn--right">{% render 'icon-plus' %}</button>
                                  </div> {% endcomment %}
    </div>
    <div class="collection__list swiper mySwiper">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="container__collection-card swiper-slide">
            <div class="container__product-image">
              <img src="{{ block.settings.product_image |  img_url: 'medium' }}" class="product-image">
            </div>
            <div class="container__product-title">
              <h2>{{ block.settings.title }}</h2>
            </div>
            <div>
              <a class="collection-btn" href="{{ block.settings.collection.url }}">{{ block.settings.button_text }}</a>
            </div>
          </div>
        {% endfor %}
      </div>
      <div class="swiper-pagination"></div>
    </div>
  </div>
</div>

<style>

  .container__collection {
    background-color: #F3F7F7;
    padding: 2rem;
  }

  .collection__heading-container {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
  }

  .container__collection-heading {
    font-size: 37px;
    color: #074542;
    font-weight: 600;
  }

  .collection__list {
    display: flex;
    flex-direction: row;
    gap: 0.5rem;
    position: relative;
  }

  .container__collection-card {
    width: 400px;
    height: 550px;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    background-color: white;
    gap: 0.375rem;
  }

  .container__product-image {
    display: flex;
    justify-content: center;
    align-items: center;

    object-fit: contain;

  }

  .product-image {
    height: 380px;
  }

  .container__product-title h2 {
    font-size: 36px;
    font-weight: 600;
    color: #364241;
    text-align: center;
    margin-block: 0.5rem;
  }

  .collection-btn {
    background: white;
    font-size: 16px;
    padding: 1rem 4rem;
    border: 1px solid #074542;
    color: #074542;
    border-radius: 29px;
    text-decoration: none;
    font-weight: 600;
  }

  .slider__btn svg {
    width: 20px;
    height: 20px;
  }

  .btn-group {
    display: flex;
    position: relative;
    flex-direction: row-reverse;
  }

  .swiper-btn {
    display: flex !important;
    width: 60px;
    height: 60px;
    border-radius: 50%;
    background-color: #008780;
    color: white;
    justify-content: center;
    align-items: center;
  }

  .swiper-button-next:after, .swiper-button-prev:after {
    font-size: 24px;
    font-weight: 900;
  }

  .swiper-button-prev {
    
  }

  .swiper-button-disabled {
    background-color: transparent;
    border: 2px solid #008780;
    color: black;
  }

  @media screen and (max-width: 786px) {

    
    .container__collection-heading {
      font-size: 24px;
    }

    .container__collection-card {
      width: 180px;
      height: 280px;
    }

    .product-image {
      height: 180px;
    }

    .container__product-title h2 {
      font-size: 16px;
    }

    .collection-btn {
      font-size: 8px;
      padding: 1rem;
    }


  }


</style>



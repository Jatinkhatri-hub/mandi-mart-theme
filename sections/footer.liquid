<footer class="footer">
  <div class="container__footer">
    {% for block in section.blocks %}
      {% if block.type == "link_list" %}
        <div class="footer-column">
          <h2>{{ block.settings.heading }}</h2>
          {% for link in block.settings.menu.links %}

          {% endfor %}
        </div>
      {% endif %}
    {% endfor %}
  </div>
</footer>

{% schema %}
  {
    "name": "Footer",
    "blocks": [
      {
        "type": "link_list",
        "name": "Footer Menu",
        "settings": [
          {
            "type": "inline_richtext",
            "id": "heading",
            "default": "Quick links",
            "label": "Menu Heading"
          }, {
            "type": "link_list",
            "id": "menu",
            "default": "footer",
            "label": "menu"
          }
        ]
      }, {
        "type": "container",
        "name": "Disclaimer",
        "settings": [
          {
            "type": "inline_richtext",
            "id": "disclaimer_heading",
            "default": "Heading",
            "label": "Heading"
          }, {
            "type": "textarea",
            "id": "details",
            "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.",
            "label": "Paragraph"
          }
        ]
      }, {
        "type": "brand-info",
        "name": "Brand Info",
        "settings": [
          {
            "type": "image_picker",
            "id": "brand_logo",
            "label": "Brand Logo"
          }, {
            "type": "textarea",
            "id": "copyright",
            "default": "Copyright Â© 2024, Mandi Mart.",
            "label": "Copyrights"
          }
        ]
      }

    ]
  }
{% endschema %}
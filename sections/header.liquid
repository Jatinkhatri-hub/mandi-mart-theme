<header class="container__nav-bar">
  <a class="menu-drawer-btn">{% render 'icon-hamburger' %}</a>
  <a href="/" class="header__logo">
    <img src="{{ section.settings.brand_logo |  img_url: 'medium' }}" alt="{{ site.name }}">
  </a>
</header>


<style>
  /* Editable Css */
  .header__logo {
    max-width: {{ section.settings.logo_width }}px; 
  }

</style>

<style>
  .container__nav-bar {
    /* height: 85px; */
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .menu-drawer-btn svg {
    width: 16px;
    height: 16px;
  }
</style>

{% schema %}
{
  "name": "Header",
  "class": "section-header",
  "settings": [
      {
        "type": "image_picker",
        "id": "brand_logo",
        "label": "Header Logo"
      },
      {
        "type": "range",
        "id": "logo_width",
        "label": "Logo Width",
        "default": 100,
        "min": 20,
        "max": 300,
        "step": 5
      }
    ]
}
{% endschema %}
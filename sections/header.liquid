<header class="container__nav-bar color-{{ section.settings.color_scheme }}">
  <a class="menu-drawer-btn">{% render 'icon-hamburger' %}</a>
  <a href="/" class="header__logo">
    <img src="{{ section.settings.brand_logo |  img_url: 'medium' }}" alt="{{ site.name }}">
  </a>

  <ul class="header-nav">
    {% for link in section.settings.navigation.links %}
      <li class="nav-link">
        <a href="{{ link.url }}">{{ link.title }}</a>
      </li>
    {% endfor %}
  </ul>

</header>


<style>
  /* Editable Css */
  .header__logo {
    width: {{ section.settings.logo_width }}px;
  }

</style>

<style>
  .container__nav-bar {
    /* height: 85px; */
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .menu-drawer-btn svg {
    width: 16px;
    height: 16px;
  }

  .header__logo {
    display: block;
  }

  .header-nav {
    display: flex;
    flex-direction: row;
    justify-content: ;

  }

  .nav-link a {
    text-decoration: none;
    color: white;
  }

  .nav-link {
    list-style: none;
  }
</style>

{% schema %}
  {
    "name": "Header",
    "class": "section-header",
    "settings": [
      {
        "type": "image_picker",
        "id": "brand_logo",
        "label": "Header Logo"
      }, {
        "type": "range",
        "id": "logo_width",
        "label": "Logo Width",
        "default": 100,
        "min": 20,
        "max": 300,
        "step": 5
      }, {
        "type": "link_list",
        "id": "navigation",
        "label": "Navigation Menu",
        "default": "main-menu"
      }, {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "t:sections.all.colors.label",
        "default": "scheme-1"
      }
    ]
  }
{% endschema %}